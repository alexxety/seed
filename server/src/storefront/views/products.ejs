<h1 style="font-size: 2.5rem; margin-bottom: 2rem; color: #1f2937;">All Products</h1>

<% if (products && products.length > 0) { %>
    <div class="products-grid">
        <% products.forEach(product => { %>
            <a href="/product/<%= product.id %>" class="product-card">
                <div class="product-name"><%= product.name %></div>
                <% if (product.description) { %>
                    <div class="product-description">
                        <%= product.description.substring(0, 120) %><%= product.description.length > 120 ? '...' : '' %>
                    </div>
                <% } %>
                <% if (product.category) { %>
                    <div style="margin-top: 0.5rem; color: #9ca3af; font-size: 0.875rem;">
                        Category: <%= product.category %>
                    </div>
                <% } %>
                <div class="product-price">
                    <%= settings.currency === 'USD' ? '$' : settings.currency %>
                    <%= product.price ? product.price.toFixed(2) : '0.00' %>
                </div>
            </a>
        <% }) %>
    </div>

    <% if (totalPages > 1) { %>
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/products?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="/products?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                    <%= i %>
                </a>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="/products?page=<%= currentPage + 1 %>">Next</a>
            <% } %>
        </div>
    <% } %>
<% } else { %>
    <div style="text-align: center; padding: 4rem; background: white; border-radius: 12px;">
        <h2 style="font-size: 1.5rem; color: #6b7280; margin-bottom: 1rem;">No products available</h2>
        <p style="color: #9ca3af;">Our catalog is currently empty. Please check back soon!</p>
    </div>
<% } %>
