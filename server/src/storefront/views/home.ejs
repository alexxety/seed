<div class="hero">
    <% if (settings.logo_path) { %>
    <img src="<%= settings.logo_path %>" alt="<%= settings.title %>" style="height: 80px; margin-bottom: 1rem;">
    <% } %>
    <h1>Welcome to <%= settings.title %></h1>
    <p>Discover our amazing products</p>
</div>

<section>
    <h2 style="font-size: 2rem; margin-bottom: 1.5rem; color: #1f2937;">Featured Products</h2>

    <% if (products && products.length > 0) { %>
        <div class="products-grid">
            <% products.forEach(product => { %>
                <a href="/product/<%= product.id %>" class="product-card">
                    <div class="product-name"><%= product.name %></div>
                    <% if (product.description) { %>
                        <div class="product-description">
                            <%= product.description.substring(0, 100) %><%= product.description.length > 100 ? '...' : '' %>
                        </div>
                    <% } %>
                    <div class="product-price">
                        <%= settings.currency === 'USD' ? '$' : settings.currency %>
                        <%= product.price ? product.price.toFixed(2) : '0.00' %>
                    </div>
                </a>
            <% }) %>
        </div>

        <div style="text-align: center; margin-top: 2rem;">
            <a href="/products" class="btn">View All Products</a>
        </div>
    <% } else { %>
        <div style="text-align: center; padding: 3rem; background: white; border-radius: 12px;">
            <p style="font-size: 1.25rem; color: #6b7280;">No products available yet. Check back soon!</p>
        </div>
    <% } %>
</section>
