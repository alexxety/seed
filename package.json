{
  "name": "telegram-shop-mini-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server && npm run bundle:public",
    "build:client": "vite build",
    "build:server": "tsup",
    "bundle:public": "rm -rf dist/public && cp -r web-dist dist/public",
    "preview": "vite preview",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "tsc --noEmit --project tsconfig.json && tsc --noEmit --project tsconfig.server.json",
    "init-db": "node init-data.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:seed": "node init-data.js",
    "db:migrate": "node migrate-sqlite-to-postgres.js",
    "create:tenant": "node scripts/create-tenant.js",
    "deploy:dev": "npm run build && rsync -avz --delete dist/ root@46.224.19.173:/var/www/telegram-shop-dev/dist/ && ssh root@46.224.19.173 'pm2 restart telegram-shop-dev'",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.18.0",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.21",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.8.1",
    "cloudflare": "^5.2.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "prisma": "^6.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.65.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/router-devtools": "^1.133.21",
    "@tanstack/router-vite-plugin": "^1.133.21",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.16.0",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.18",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  }
}
