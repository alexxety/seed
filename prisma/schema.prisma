// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  icon      String
  createdAt DateTime  @default(now()) @map("created_at")
  products  Product[]

  @@map("categories")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  categoryId  Int      @map("category_id")
  image       String
  description String
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  category    Category @relation(fields: [categoryId], references: [id])

  @@map("products")
}

model Order {
  id                  Int      @id @default(autoincrement())
  orderNumber         String   @unique @map("order_number")
  fullName            String   @map("full_name")
  phone               String
  deliveryType        String   @map("delivery_type")
  deliveryDetails     String   @map("delivery_details")
  items               Json
  total               Int
  telegramUsername    String?  @map("telegram_username")
  telegramId          Int?     @map("telegram_id")
  telegramFirstName   String?  @map("telegram_first_name")
  telegramLastName    String?  @map("telegram_last_name")
  createdAt           DateTime @default(now()) @map("created_at")
  status              String   @default("new")

  @@map("orders")
}

model OrderCounter {
  id      Int @id @default(1)
  counter Int @default(0)

  @@map("order_counter")
}

model Setting {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String   @db.Text
  label       String
  description String?  @db.Text
  type        String   @default("text") // text, number, secret, textarea
  category    String   @default("general") // telegram, bot, system
  isRequired  Boolean  @default(false) @map("is_required")
  isEncrypted Boolean  @default(false) @map("is_encrypted")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("settings")
}

model Shop {
  id                Int      @id @default(autoincrement())
  subdomain         String   @unique
  ownerName         String   @map("owner_name")
  ownerEmail        String   @map("owner_email")
  ownerPhone        String?  @map("owner_phone")
  botToken          String   @map("bot_token") @db.Text
  chatId            String   @map("chat_id")
  adminTelegramId   String   @map("admin_telegram_id")
  status            String   @default("active") // active, blocked, pending
  plan              String   @default("free") // free, basic, pro
  expiresAt         DateTime? @map("expires_at")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("shops")
}
